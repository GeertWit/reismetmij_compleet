<div class="col col-md-6">
<span>
<h2>Registreren</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div> <%= f.label :Naam %><br />
  <%= f.text_field :name, :placeholder => "Voornaam en Achternaam" %></div>

  <div><%= f.label :geslacht %><br />
  <%= f.text_field :gender, :placeholder => "Man of Vrouw" %></div>

  <div><%= f.label :Geboortedatum %><br />
  <%= f.date_select :birthday, :order => [:day, :month, :year], :start_year => Time.now.year - 70, :end_year => Time.now.year %></div>

  <div><%= f.label :Email %><br />
  <%= f.email_field :email, :placeholder => "E-mailadres" %></div>

  <div><%= f.label :Wachtwoord %><br />
  <%= f.password_field :password, :placeholder => "Wachtwoord" %></div>

  <div><%= f.label :Wachtwoord_herhalen%><br />
  <%= f.password_field :password_confirmation, :placeholder => "Wachtwoord herhalen" %></div>

  <div><%= f.label :Extra_info_over_mij %><br />
  <%= f.text_area :extra_info %></div>



  
<div><%= f.submit "Registreer" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
</span>
</div>